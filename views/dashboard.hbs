<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>

{{#if stories}}
<p>Here are your work</p>
{{> _search_bar}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Set Time</th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/{{_id}}">{{title}}</a></td>
            <td>{{formatDate setTime 'MMMM Do YYYY, h:mm:ss a'}}</td>
            
            <td>
                <!--<a href="/stories/edit/{{_id}}" class="btn btn-float">
                    <i class="fas fa-edit"></i>
                </a>-->

                <form action="/stories/{{_id}}" method="POST" id="delete-form" title="Delete"
                onclick="return confirm('Are you sure you want to delete this table?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn red">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You don'thave ant work</p>
{{/if}}