<h3>Add Story</h3>
<div class="row">
    <form action="/stories" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <label for="title">Title</label>
                <input type="text" id="title" name="title">
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <label for="setTime">Set Time</label>
                <br>
                <input type="datetime-local" id="setTime" name="setTime"  required/>
                <span></span>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Your Work:</h5>
                <textarea id="body" name="body"></textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/stories" class="btn orange">Cancel</a>
        </div>
    </form>
</div>